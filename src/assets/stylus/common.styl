/*  ====== radio style ====== */
.el-radio,.el-checkbox
  color $textBodyColor;
  .el-radio__input 
    &.is-checked
      .el-radio__inner 
        background $chiotBlue;
        border-color $chiotBlue;
    &.is-checked + .el-radio__label
      color $chiotBlue;
    &.is-checked.is-disabled 
      .el-radio__inner
        background $disabledColor;
        border-color $borderColor;
        &::after
          background-color $backgroundGray;
    &.is-checked.is-disabled + .el-radio__label
      color $disabledColor;
  .el-radio__label
      font-size 14px;
  .el-radio__inner 
    border: 1px solid $borderColor;
  &.is-bordered.is-checked
    border-color $chiotBlue
  &.is-bordered
      height 36px;
      padding 10px 20px 0 10px;
    &.is-bordered-sm
      height 32px;
      padding 8px 20px 0 10px
      .el-radio__label
        font-size 14px;
    &.is-bordered-lg
      height 40px;
      padding 12px 20px 0 10px;    
      border-color $borderColor; 
  &.is-disabled.is-bordered.is-checked
    background-color $backgroundGray;
    border-color: $borderColor;

